<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".activities.MainActivity">

    <include
        android:id="@+id/topBar"
        layout="@layout/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scrollView"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/promoImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_400sdp"
                android:src="@drawable/promo_image"
                android:scaleType="centerCrop">
            </ImageView>

            <TextView
                android:id="@+id/getStartedLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get started"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_80sdp"
                android:textColor="@color/whitesmoke"
                android:fontFamily="@font/tommy_medium"
                android:textSize="@dimen/_26sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/promoImageView"
                app:layout_constraintBottom_toTopOf="@id/infoLabel"/>

            <TextView
                android:id="@+id/infoLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/getStartedLabel"
                app:layout_constraintBottom_toTopOf="@id/footerLabel"
                android:text="You can browse through available groups and their members in the search panel. \n \nTo add a photocard simply hold down your finger on your desired card and select where would you like to add it. Your owned photocards and wishlist can be found in a dedicated tab. \n \nPersonalise your profile and join the Kollect community!"
                android:textAlignment="center"
                android:fontFamily="@font/tommy_regular"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/lightgray">
            </TextView>

            <TextView
                android:id="@+id/footerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/infoLabel"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="A personal project made with ðŸ’– by kubixDev"
                android:textAlignment="center"
                android:fontFamily="@font/tommy_regular"
                android:textColor="@color/lightgray">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>