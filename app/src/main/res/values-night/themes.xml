<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Kollect" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Basic dark colors -->
        <item name="colorPrimary">@color/almostblack</item>
        <item name="colorPrimaryVariant">@color/darkgray</item>
        <item name="colorOnPrimary">@color/gray</item>

        <!-- Contrast colors -->
        <item name="colorSecondary">@color/whitesmoke</item>
        <item name="colorSecondaryVariant">@color/darkbrown</item>
        <item name="colorOnSecondary">@color/brown</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>
    <style name="Theme.Kollect" parent="Base.Theme.Kollect" />
</resources>